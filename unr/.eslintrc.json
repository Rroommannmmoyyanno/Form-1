{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "eqeqeq": ["error", "always"],
    "curly": ["error", "all"],
    "no-console": "warn",
    "indent": ["error", 2],
    "no-unused-vars": ["warn"],
    "prefer-const": "error"
  }
}
